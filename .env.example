# API Keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
GOOGLE_API_KEY=your_google_api_key_here

# Tank Location and Timezone
TANK_LOCATION=Austin, TX
TANK_TIMEZONE="America/Chicago"

# VLM API Settings
AI_API_TIMEOUT=60
AI_API_MAX_RETRIES=3
AI_MAX_TOKENS=1024

# Data Paths
DATA_DIR=./data
IMAGES_DIR=${DATA_DIR}/images
DATABASE_DIR=${DATA_DIR}/db
DATABASE_URL=sqlite:///${DATABASE_DIR}/aquarium.db

# Camera Settings
CAMERA_FPS=30
CAMERA_FRAME_BUFFER=2
CAMERA_IMG_TYPE=jpg
CAMERA_MAX_DIM=1024 # VLM apis expect square images
CAMERA_CAM_WIDTH=1920
CAMERA_CAM_HEIGHT=1080
CAMERA_MAX_IMAGES=1000
CAMERA_MIN_FREE_SPACE_MB=500
CAMERA_DEVICE_READ_ATTEMPTS=3
CAMERA_DEVICE_RETRY_DELAY=1
CAMERA_DEVICES=0,4  # Comma-separated list of video device indices to use

# Tank Warning Thresholds
TANK_TEMP_MIN=74
TANK_TEMP_MAX=82
TANK_PH_MIN=6.5
TANK_PH_MAX=7.5
TANK_AMMONIA_MAX=0.25
TANK_NITRITE_MAX=0.25
TANK_NITRATE_MAX=40

# API Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://${HOST_IP}:3000,http://${HOST_IP}:3001
CORS_MAX_AGE=3600

# Docker Configuration 
DOCKER_BUILDKIT=1
UID=1000
GID=1000