FROM node:16-alpine
WORKDIR /app
ARG BACKEND_URL
ARG REACT_APP_POLL_INTERVAL
ARG REACT_APP_IMAGE_MAX_WIDTH
ARG REACT_APP_IMAGE_MAX_HEIGHT
ENV BACKEND_URL=${BACKEND_URL}
ENV REACT_APP_POLL_INTERVAL=${REACT_APP_POLL_INTERVAL}
ENV REACT_APP_IMAGE_MAX_WIDTH=${REACT_APP_IMAGE_MAX_WIDTH}
ENV REACT_APP_IMAGE_MAX_HEIGHT=${REACT_APP_IMAGE_MAX_HEIGHT}
COPY package*.json ./
RUN npm install
COPY . .
CMD ["npm", "start"]