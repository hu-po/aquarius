FROM node:16-alpine
WORKDIR /app
ARG BACKEND_URL
ENV VITE_BACKEND_URL=${BACKEND_URL}
ENV VITE_POLL_INTERVAL=${REACT_APP_POLL_INTERVAL}
ENV VITE_IMAGE_MAX_WIDTH=${REACT_APP_IMAGE_MAX_WIDTH}
ENV VITE_IMAGE_MAX_HEIGHT=${REACT_APP_IMAGE_MAX_HEIGHT}
ENV VITE_TEMP_WARNING_MIN=${REACT_APP_TEMP_WARNING_MIN}
ENV VITE_TEMP_WARNING_MAX=${REACT_APP_TEMP_WARNING_MAX}
ENV VITE_PH_WARNING_MIN=${REACT_APP_PH_WARNING_MIN}
ENV VITE_PH_WARNING_MAX=${REACT_APP_PH_WARNING_MAX}
ENV VITE_STAT_DECIMAL_PLACES=${REACT_APP_STAT_DECIMAL_PLACES}
COPY package*.json ./
RUN npm install
COPY . .
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:3000/ || exit 1
CMD ["npm", "start"]